{
  "manifest_version": 3,
  "name": "Super Find Bar",
  "version": "1.0.0",
  "description": "Advanced in-page search with multi-term highlighting, fuzzy search, and smart scrolling",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_start",
    "all_frames": true
  }],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options/options.html",
  "commands": {
    "toggle-search": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Toggle Super Find Bar"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}




