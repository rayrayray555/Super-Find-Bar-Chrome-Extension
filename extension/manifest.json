{
  "manifest_version": 3,
  "name": "Super Find Bar",
  "version": "1.0.0",
  "description": "Advanced in-page search with multi-term highlighting, fuzzy search, smart scrolling, and dynamic content detection",
  "author": "Ray",
  "homepage_url": "https://github.com/rayrayray555/Super-Find-Bar-Chrome-Extension",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "content/config.js",
      "content/utils.js",
      "content/visibility.js",
      "content.js"
    ],
    "run_at": "document_start",
    "all_frames": true
  }],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options/options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Super Find Bar - Advanced Search"
  },
  "commands": {
    "toggle-search": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Toggle Super Find Bar"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
